   body
      nav.navbar.navbar-dark.text-white.bg-dark.site-header.sticky-top.py-1
         .container.d-flex.flex-column.flex-md-row.justify-content-between
            a.nav-link.text-white(href='index.html')
               b Online Auction
            a.nav-link(href='housenlot.html') Assets
            a.nav-link(href='vehicle.html') Enterprise
            a.nav-link(href='#') Support
            a.nav-link(href='#') Pricing
      main#editHnl(class="container")
         select.dropdown(name='forma', onchange='location = this.value;')
            option(value='housenlot.html') House & Lot
            option(value='vehicle.html') Vehicles
         div(v-for="hx in houseandlot")
            form(action='/edit', method='POST')
               .form-group
                  label Asset ID
                  input#la.form-control(type='text', name='h_id', :value="hx.h_id")
               .form-group
                  label Lot area (sq.m)
                  input#la.form-control(type='text', name='la', :value="hx.la")
               .form-group
                  label Floor Area
                  input#fa.form-control(type='text', name='fa', :value="hx.fa")
               .form-group
                  label Address
                  input#address.form-control(type='text', name='address', :value="hx.address")
               .form-group
                  label Year acquired
                  input#year_ac.form-control(type='text', name='year_ac', :value="hx.year_ac")
               .form-group
                  label Condition
                  input#cond.form-control(type='text', name='cond', :value="hx.cond")
               .form-group
                  label Price
                  input#price.form-control(type='text', name='price', :value="hx.price")
               .form-group
                  button.btn.btn-primary(type='submit' 
                  v-on:click='update') Save
                  input.btn(type='button', onclick='reset()', value='Clear')
      script.
         function reset() {
         document.getElementById("editHnl").reset();
         }
